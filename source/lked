#!/bin/bash

if [ $# -lt 1 ] ; then
 echo "Usage: $0 [executable]"
 echo "Generated executable will be [executable].exe in ../bin"
 exit 0
fi

EXEDIR=../bin
EXE=$1

if [ -e $EXEDIR/$EXE.exe ] ; then
  echo "Executable $EXE.exe exists in ../bin. Exiting..."
  exit 0
fi

F77=ifort
#OPT='-openmp -parallel -fpp -traceback -check all -integer-size 64'
OPT='-O2 -openmp -parallel -fpp -traceback -integer-size 64 -fp-model strict -no-ftz -ipo'    # ifort_O2_opts
#OPT='-O2 -openmp -integer-size 64'    # ifort_O2

#F77=openf90
#OPT='-O2 -mp -i8 -no-ftz -static -ipa'    # open64_O2_opts

FILS='../object/*.o'

set echo

echo Using compiler $F77 with options $OPT to link files
echo
echo $FILS
echo
echo to executable $EXE.exe in ../bin

$F77 $OPT $FILS -o $EXEDIR/$EXE.exe

echo Done.

unset echo

